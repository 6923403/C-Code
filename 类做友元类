class Building;

//友元类

class goodfd

{

public:

goodfd();

void visit();

private:

Building * building;

};

class Building

{

//告诉编译器 goodfd类是本类的朋友 可以访问里面的私有内容

friend class goodfd;

public:

Building();

private:

string m_sittingroom;

string m_bedroom;

};

//类外做函数实现

goodfd::goodfd()

{

this -> building = new Building;

}

void goodfd::visit()

{

cout << "111正在访问 " << this -> building -> m_sittingroom << endl;

cout << "111正在访问 " << this -> building -> m_bedroom << endl;

}

Building::Building()

{

this -> m_sittingroom = "客厅";

this -> m_bedroom = "卧室";

}

void test1()

{

//Building building;

goodfd fd;

fd.visit();

}
