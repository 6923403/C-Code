template<class T1, class T2>

class person

{

    public:

    person(T1 name, T2 age);

    void showperson();





    T1 m_name;

    T2 m_age;

};

    template<class T1, class T2>

    person<T1, T2>::person(T1 name, T2 age)

    {

      this -> m_name = name;

      this -> m_age = age;

    }

    template<class T1, class T2>

    void person<T1, T2>::showperson()

    {

        cout << "姓名 ： " << this -> m_name << endl;

        cout << "年龄 ： " << this -> m_age << endl;

    }
    
   ---***--

#define _CRT_SECURE_NO_WARNINGS

#include <iostream>

#include <string>

//#include "person.h"

//#include "person.cpp" //建议模板不要作分文件简写 ，写到一个类中即可

//类内进行声明和实现最后把后缀名改为hpp  约定俗成

#include "person.hpp"

using namespace std;

int main()

{

    person<string, int>p("猪八戒", 10);

    p.showperson();

    return EXIT_SUCCESS;

}

