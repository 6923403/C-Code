//定时器第二种方式

    QTimer * timer1 = new QTimer(this);

    //启动定时器对象

    timer1 -> start(500); //毫秒

    //每隔0.5秒发送信号

    connect(timer1, &QTimer::timeout, [=]()

    {

        static int num = 0;

        ui -> label_4 -> setText(QString::number(num++) );

    });

    //点击按钮 暂停定时器

    connect(ui -> pushButton, &QPushButton::clicked, [=]()

    {

        timer1 -> stop();

    });
