template<class T1, class T2>

class person

{

    //友元函数类内实现

    friend void printperson(person<T1, T2> &p)

    {

        cout << "姓名 = " << p.m_name << endl;

        cout << "年龄 = " << p.m_age << endl;

    }

    public:

    person(T1 name, T2 age)

    {

        this -> m_name = name;

        this -> m_age = age;

    }

    private:

    T1 m_name;

    T2 m_age;



};

void test1()

{

    person<string, int>p("ss", 10);

    printperson(p);

}
