class animal

{

public:

int m_age;

};

//虚基类 sheep

class sheep :virtual public animal

{

};

//虚基类 ostrich

class ostrich :virtual public animal

{

};

class sheepostrich :public sheep, public ostrich

{

};

//菱形继承的解决方案  利用虚继承

//操作的是共享的一份数据

void test1()

{

sheepostrich so;

so.sheep::m_age = 10;

so.ostrich::m_age = 20;

/*cout << so.sheep::m_age << endl;

cout << so.ostrich::m_age << endl;*/

cout << so.m_age << endl; //可以直接访问 原因已经没有二义性了只有一份m_age

}
