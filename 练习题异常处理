  int a, b;

    while (cin >> a >> b)
    {
        try
        {
            if (b == 0)
                throw std::runtime_error("输入错误");
            cout << a / b << endl;
        }
        catch (runtime_error err)
        {
            cout << err.what();
            cout << "是否重新输入" << endl;
            char c;
            cin >> c;
            if (!cin || c == 'N' || c == 'n')
                break;
        }
    }

    // catch()
    // {

    // }
}
