#include <iostream>
#include <string>
#include <vector>
using namespace std;

class Person
{
    public:

        void setname(string name) const
        {
            m_name = name;
        }

        void setadd(string add) const
        {
            m_address = add;
        }

        void showinfo()
        {
            cout << "姓名：" << m_name << "   地址：" << m_address << endl;
        }

        string m_name;
        string m_address;
};

 

void test1()
{
    Person san;
    san.setname("💐");
    san.setadd("☁");
    san.showinfo();
}

int main(int argc, char **argv)
{
    test1();
}
