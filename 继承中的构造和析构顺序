class base

{

public:

base()

{

cout << "默认构造函数调用" << endl;

}

~base()

{

cout << "析构函数调用" << endl;

}

};

//子类会继承父类的成员属性 ， 成员函数

//但是  子类 不会继承 父类 构造函数和析构函数

//父类本身的成员属性 子类无法利用

class son :public base

{

public:

son()

{

cout << "son默认构造" << endl;

}

~son()

{

cout << "Son 析构函数调用" << endl;

}

};

void test1()

{

//base b1;

son s1;

}
