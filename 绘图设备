    //QImage 做绘图设备  对像素级访问进行了优化

//    QImage img(300, 300, QImage::Format_RGB32);

//    img.fill(Qt::white);

//    QPainter painter(&img);

//    painter.setPen(QPen(Qt::red));

//    painter.drawRect(QRect(100, 100, 100, 100));

//    img.save("/home/then/下载/3.png");

    //QPicture 绘图设备

    QPicture pic; //用来重新 记录绘图指令

    QPainter painter;

    painter.begin(&pic);

    painter.setPen(QPen(Qt::cyan));

    painter.drawRect(QRect(100, 100, 100, 100));

    painter.end();

    //保存

    pic.save("/home/then/下载/3.zt");



