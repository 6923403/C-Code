
#include <QDebug> 

#include <QTimerEvent>




ui(new Ui::Widget)

{

    ui->setupUi(this);

    //启动定时器

    id1 = startTimer(500);

    id2 = startTimer(2000);

}



Widget::~Widget()

{

    delete ui;

}

//定时器事件

void Widget::timerEvent(QTimerEvent * e)

{

    if(e -> timerId() == id1)

    {

    static int num = 0;

    ui -> label_2 -> setText(QString::number(num++) );

    }

    if(e -> timerId() == id2)

    {

    static int num2 = 0;

    ui -> label_3 -> setText(QString::number(num2++) );

    }

}

-------------------------
wedgit.h

private:

    Ui::Widget *ui;

    //定时器事件

    void timerEvent(QTimerEvent *);

    //定时器标识号

    int id1;

    int id2;
