//() 重载

class myprint

{

public:

void operator()(string text)

{

cout <<	text << endl;

}

};

class myadd

{

public:

int operator()(int v1, int v2)

{

return v1 + v2;

}

};

void test2()

{

/*myadd myadd;

cout << myadd(1, 1) << endl;*/

cout << myadd()(1, 1) << endl; //匿名对象

}

int main()

{

//myprint myprint;

//myprint("hw"); //仿函数

test2();

system("pause");

return EXIT_SUCCESS;

}
